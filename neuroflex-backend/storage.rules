rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Users can only access their own files
    match /user_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Therapists can only access assigned patient reports
    match /therapist_uploads/{therapistId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == therapistId;
    }

    // Publicly accessible files (e.g., guides, general information)
    match /public/{allPaths=**} {
      allow read;
    }
  }
}
